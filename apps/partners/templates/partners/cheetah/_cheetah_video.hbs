{% load templatetag_handlebars %}
{% load i18n %}
{% load static %}

{% tplhandlebars "cheetah/cheetah_video" %}
    <div class="l-section" id="cheetah-video">
        <div class="l-wrapper">
            <div class="row">
                <div class="col6">
                    <div class="video-heading">
                        <span class="cheetah-icon-big"></span>
                        <span class="cheetah-content">
                            <h1>The Cheetah Fund</h1>
                            <span>Supporting Pioneers in Africa</span>
                        </span>
                    </div>
                </div>
                <div class="col6"></div>
            </div>
            <div class="row video-intro">
                <div class="col4">
                    <h2>
                        Crowdfund 30% in 30 days and the Cheetah Fund will grant you the rest!
                    </h2>
                    {{#link-to 'myPartnerProject' 'cheetah' class="btn start-cheetah"}}
                        {% trans "Start a Cheetah Campaign!" %}
                    {{/link-to}}
                </div>
                <div class="col8">
                    <img src="/static/assets/images/cheetah/video/video-still.jpg" alt="">
                </div>
            </div>
        </div>
    </div>
{% endtplhandlebars %}
