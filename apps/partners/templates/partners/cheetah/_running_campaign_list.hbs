{% load templatetag_handlebars %}
{% load i18n %}
{% load static %}

{% tplhandlebars "cheetah/running_campaign_list" %}
    <div class="l-section" id="cheetah-running-campaign">
        <div class="l-wrapper">
            <div class="row">
                <div class="col12">
                    <h1>{% trans 'Running Cheetah campaigns'%}</h1>
                </div>
            </div>
        </div>
        <div class="l-wrapper">
            <ul class="campaign-container">
                <div class="row">
                    {{#each project in favouriteProjects}}
                        <div class="col4">
                            <li class="campaign-item">
                                <a {{action goToFavouriteProject project}} class="campaign-item-holder">
                                    <span {{bindAttr class="id:"}}></span>
                                    <header class="header">
                                        <img {{bindAttr src=project.image}} />
                                    </header>
                                    <span class="profile-photo">
                                        <img {{bindAttr src=project.owner.getAvatar}} />
                                    </span>
                                    <div class="campaign-body">
                                        <p>
                                            <span class="profile-name">
                                                {{project.owner.first_name}} {% trans 'runs a Cheetah campaign' %}
                                            </span>
                                            <span class="campaign-body-names">
                                                {{project.title}}, {{project.country.name}}
                                            </span>
                                        </p>
                                    </div>

                                    <div class="campaign-footer">
                                        {{#if project.isStatusCampaign}}
                                            <div class="cheetah-funded">
                                                    <div class="cheetah-funded-text">
                                                        {% blocktrans%}
                                                            <span><strong>At 30%</strong> it will be Cheetah Funded</span>
                                                        {% endblocktrans %}
                                                    </div>
                                                <i class="cheetah-funded-dot"></i>
                                            </div>
                                            {{cheetah-progressbar targetValue=project.amount_asked currentValue=project.amount_donated class="campaign-fund-amount-slider"}}
                                            <div class="campaign-fund-amount">
                                                <span class="amount-raised"><strong>&euro; {{project.amount_donated}} </strong>{% trans "raised" context "Slider project frontpage" %}</span>
                                                <span class="days-left"><strong>{{project.daysToGo}} </strong>{% trans "days left" context "Slider project frontpage" %}</span>
                                            </div>
                                        {{else}}
                                            <p class="campaign-fund-amount-slider is-funded"><strong style="width: 100%; overflow: hidden;" class="slider-progress is-in-progress"><em class="slider-percentage"></em></strong></p>
                                            <div class="campaign-fund-amount">
                                            <span class="fully-funded"><strong>&euro; {{project.amount_donated}} {% trans 'fully funded!' %}</strong></span>
                                            </div>

                                        {{/if}}
                                    </div>
                                    <div class="campaign-hover">
                                        <p class="campaign-hover-head">
                                            <strong>{{project.title}}</strong>
                                        </p>
                                        <p class="campaign-hover-body">
                                            <span>
                                                {{project.pitch}}
                                            </span>
                                        </p>
                                        <p class="campaign-hover-footer">
                                            <span class="go-to-campaign">
                                                {% trans "Go to campaign" %}
                                            </span>
                                        </p>
                                    </div>
                                </a>
                            </li>
                        </div>
                    {{/each}}
                </div>
                <div class="row">
                    <div class="col12 browse-all">
                        {{#linkTo 'partner.projects' 'cheetah' class="btn"}}{% trans 'Browse all Cheetah Campaigns'%}{{/linkTo}}
                    </div>
                </div>
            </ul>
        </div>
    </div>
{% endtplhandlebars %}