{% load templatetag_handlebars %}
{% load i18n %}
{% load static %}

{% tplhandlebars "cheetah/cheetah_video" %}
    <div class="l-section" id="cheetah-video">
        <div class="l-wrapper">
            <div class="row">
                <div class="col10">
                    <div class="video-heading">
                        <span class="cheetah-icon-big"></span>
                        <span class="cheetah-content">
                            <h1>{% trans 'The Cheetah Fund'%}</h1>
                            <span>{% trans 'Supporting Pioneers in Africa'%}</span>
                        </span>
                    </div>
                </div>
                <div class="col2">
                    <div class="postcodeloterij">
                        <div class="img">
                            <a href="http://postcodeloterij.nl" target="_blank"></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row video-intro">
                <div class="col6">
                    <h2>
                        {% trans 'Crowdfund 30% in 30 days and the Cheetah Fund will grant you the rest!'%}
                    </h2>
                    <a {{action "partnerProject"}} class="btn start-cheetah">
                        {% trans "Start a Cheetah Campaign" %}
                    </a>
                </div>
                <div class="col6">
                    <img src="/static/assets/images/cheetah/video/video-still.jpg" alt="Cheetah Fund">
                </div>
            </div>
        </div>
    </div>
{% endtplhandlebars %}
